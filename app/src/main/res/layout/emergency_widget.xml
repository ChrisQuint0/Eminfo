<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="12dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_emergency"
            android:contentDescription="Emergency" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emergency Info"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/widget_text_primary"
            android:paddingStart="8dp"
            android:paddingLeft="8dp" />
    </LinearLayout>

    <!-- Main Info Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="4dp">

        <TextView
            android:id="@+id/widget_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name Not Set"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/widget_text_primary"
            android:paddingBottom="16dp" />

        <!-- Info Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="12dp">

            <!-- Blood Type -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/widget_card_background"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BLOOD TYPE"
                    android:textSize="10sp"
                    android:textColor="@color/widget_text_secondary"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/widget_blood_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not Set"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/widget_text_primary" />
            </LinearLayout>
        </LinearLayout>

        <!-- Allergies Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/widget_card_background"
            android:padding="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALLERGIES"
                android:textSize="10sp"
                android:textColor="@color/widget_text_secondary"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/widget_allergies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="None listed"
                android:textSize="13sp"
                android:textColor="@color/widget_text_primary" />
        </LinearLayout>

        <!-- Emergency Contact Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMERGENCY CONTACT"
                android:textSize="10sp"
                android:textColor="@color/widget_text_secondary"
                android:paddingBottom="6dp" />

            <TextView
                android:id="@+id/widget_contact_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Not Set"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/widget_text_primary"
                android:paddingBottom="2dp" />

            <TextView
                android:id="@+id/widget_contact_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="#34C759" />
        </LinearLayout>
    </LinearLayout>

    <!-- Call Button -->
    <Button
        android:id="@+id/widget_call_button"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="Call Emergency Contact"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="@drawable/button_emergency" />

</LinearLayout>